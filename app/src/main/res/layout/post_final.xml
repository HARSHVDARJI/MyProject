<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_black_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:padding="5dp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:gravity="top|start"
                android:lineSpacingExtra="1dp"
                android:maxLines="2"
                android:textStyle="bold"
                android:text="@string/title_final"
                android:fontFamily="sans-serif"
                android:textColor="@color/font_black_0"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Harsh Darji"
                    android:gravity="left"
                    android:textStyle="italic"
                    android:paddingLeft="10dp"
                    android:textColor="@drawable/field_selector"
                    android:textSize="12sp"
                    android:descendantFocusability="afterDescendants"/>

                <TextView
                    android:id="@+id/tag"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Tag :"
                    android:gravity="right"
                    android:textColor="@color/font_black_5"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/cat_tag"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="How to"
                    android:gravity="left"
                    android:paddingRight="5dp"
                    android:textColor="@drawable/field_selector"
                    android:textSize="12sp"
                    android:descendantFocusability="afterDescendants"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:layout_margin="6dp">

                <TextView
                    android:id="@+id/num_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="123"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font_black_5"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Likes"
                    android:paddingRight="10dp"
                    android:paddingLeft="3dp"
                    android:textColor="@color/font_black_5"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/num_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="123"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font_black_5"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Comments"
                    android:paddingRight="10dp"
                    android:paddingLeft="3dp"
                    android:textColor="@color/font_black_5"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/post_cantain"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:gravity="top|start"
        android:lineSpacingExtra="1dp"
        android:text="@string/decs"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_0"
        android:textSize="12sp"/>
</LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ToggleButton
            android:layout_margin="5dp"
            android:id="@+id/liketoggle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/check"
            android:textOn=""
            android:textOff=""
            android:focusable="false"
            android:focusableInTouchMode="false" />
        <Button
            android:id="@+id/commentbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/comment"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/sharebtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/share"
            android:layout_margin="5dp"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>